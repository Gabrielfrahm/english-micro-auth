{
  "name": "micro-authenticator",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "scripts": {
    "ts-node": "ts-node",
    "tsc": "tsc",
    "build": "tsc -b ./tsconfig.json",
    "test": "jest --detectOpenHandles",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "migration:create": "drizzle-kit generate:pg --config=./src/shared/infra/db/drizzle/drizzle.config.ts",
    "migration:run": "drizzle-kit push:pg --config=./src/shared/infra/db/drizzle/drizzle.config.ts",
    "migration:delete": "drizzle-kit drop  --config=./src/shared/infra/db/drizzle/drizzle.config.ts",
    "migration:check": "drizzle-kit check:pg --config=./src/shared/infra/db/drizzle/drizzle.config.ts"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,jsx}": [
      "eslint --cache --fix"
    ],
    "**/*.{js,css,md,ts,tsx,jsx}": [
      "prettier --write"
    ]
  },
  "author": "Gabriel Marques Frahm",
  "license": "ISC",
  "devDependencies": {
    "@swc/core": "^1.3.71",
    "@swc/jest": "^0.2.27",
    "@types/better-sqlite3": "^7.6.4",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/pg": "^8.10.2",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "drizzle-kit": "^0.19.12",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.27.2",
    "pg": "^8.11.2",
    "uuid": "^9.0.0",
    "yup": "^1.2.0"
  }
}